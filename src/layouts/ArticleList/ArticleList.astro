---
import "node_modules/destyle.css";
import "./_footer.scss";
import Article from "../../components/Article/Article.astro";

type Article = {
  title: string;
  date: string; //YYYY-MM-DD
  path: string;
};

type Props = {
  articleList: Array<Article>;
};

const { articleList } = Astro.props;
---

<ul class="l-articleList">
  {
    articleList.map(({ title, date, path }) => (
      <li class="l-articleList__item">
        <a class="l-articleList__link" href={path}>
          <Article title={title} date={date} />
        </a>
      </li>
    ))
  }
</ul>
